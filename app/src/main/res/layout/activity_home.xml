<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/colorAccent">

    <EditText
        android:id="@+id/dataReceived"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="00.00"
        android:textColor="#fff"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dataReceived"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-69dp"
        android:layout_marginEnd="94dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="m"
        android:textColor="#fff"
        android:textSize="35dp" />

    <Button
        android:id="@+id/maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="139dp"
        android:background="@color/colorPrimary"
        android:text="MAPS"
        android:textColor="#fff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buzzer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/maps"
        android:layout_marginStart="-17dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/dataReceived"
        android:background="@color/colorPrimary"
        android:text="Buzzer"
        android:textColor="#fff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/dataReceived1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-52dp"
        android:layout_marginBottom="202dp"
        android:layout_toStartOf="@+id/editText2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="latt1"
        android:textColor="#fff"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/dataReceived2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginBottom="137dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="long1"
        android:textColor="#fff"
        android:paddingLeft="10dp"/>

</RelativeLayout>